{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "QB64 Build Task - Build Only",
			"type": "shell",
			"command": "${config:qb64.compilerPath} -c ${fileDirname}\\${fileBasename} -o ${fileDirname}\\${fileBasenameNoExtension}.exe -x",
			"options": {},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "QB64 Build Task - Build & Run",
			"type": "shell",
			"command": "${config:qb64.compilerPath} -c ${fileDirname}\\${fileBasename} -o ${fileDirname}\\${fileBasenameNoExtension}.exe -x; ${fileDirname}\\${fileBasenameNoExtension}.exe",
			"options": {},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}
