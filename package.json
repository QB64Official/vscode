{
    "name": "qb64",
    "displayName": "QB64",
    "description": "QB64 language support for Visual Studio Code.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.69.1"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "license": "MIT",
    "publisher": "LordDurus",
    "keywords": [
        "QB64"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/QB64Official/vscode"
    },
    "icon": "images/qb64.ico",
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:QB64"
    ],
    "configurationDefaults": {
        "[QB64]": {
            "breadcrumbs.enabled": true,
            "files.trimTrailingWhitespace": true,
            "editor.tabSize": 4,
            "editor.insertSpaces": false,
            "editor.formatOnSave": true,
            "editor.wordWrap": "off",
            "editor.autoIndet": true,
            "explorer.autoReveal": true
        }
    },
    "contributes": {
        "configuration": {
            "title": "QB64",
            "properties": {
                "qb64.isAutoSpacing": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto spacing & Upper/Lowercase formation."
                },
                "qb64.areKeywordsInCapitals": {
                    "type": "boolean",
                    "default": true,
                    "description": "Keywords in CAPITALS."
                },
                "qb64.areSubsAndFuctionsIndented": {
                    "type": "boolean",
                    "default": true,
                    "description": "Indent SUBs and FUNCTIONs"
                },
                "qb64.outPutExeToSourceFolder": {
                    "type": "boolean",
                    "default": true,
                    "description": "Output Exe to source folder:"
                },
                "qb64.compilerPath": {
                    "type": "string",
                    "default": "qb64.exe",
                    "description": "Full path to the QB64 compiler.  If you have the folder QB64 in your path you can just leave this as QB64.exe"
                }
            }
        },
        "languages": [
            {
                "id": "QB64",
                "aliases": [
                    "QB64",
                    "Qb64",
                    "qb64",
                    "qB64"
                ],
                "extensions": [
                    ".bas",
                    ".bi",
                    ".bm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "QB64",
                "scopeName": "source.QB64",
                "path": "./syntaxes/qb64.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "QB64",
                "path": "./snippets/qb64-snippets.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.showHelp",
                "key": "f1",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.buildOnly",
                "key": "ctrl+shift+b",
                "when": "editorTextFocus"
            },
            {
                "key": "f2",
                "command": "workbench.action.focusFirstEditorGroup",
                "when": "outline.active"
            },
            {
                "key": "f2",
                "command": "outline.focus",
                "when": "editorTextFocus"
            }
        ],
        "activationEvents": [
            "onCommand:extension.showHelp"
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^18.6.5",
        "@types/vscode": "^1.41.0",
        "typescript": "^4.7.4",
        "vscode-test": "^1.3.0"
    }
}
