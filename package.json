{
    "name": "qb64",
    "displayName": "QB64",
    "description": "QB64 language support for Visual Studio Code.",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "license": "MIT",
    "publisher": "LordDurus",
    "keywords": [
        "QB64"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/QB64Official/vscode"
    },
    "icon": "images/qb64.ico",
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:QB64"
    ],
    "contributes": {
        "languages": [
            {
                "id": "QB64",
                "aliases": [
                    "QB64",
                    "Qb64"
                ],
                "extensions": [
                    ".bas",
                    ".bi",
                    ".bm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "QB64",
                "scopeName": "source.QB64",
                "path": "./syntaxes/qb64.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "typescript": "^4.7.4",
        "vscode-test": "^1.3.0",
        "@types/vscode": "^1.41.0"
    }
}